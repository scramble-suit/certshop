{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}"
        },
        {
            "name": "Create CA",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": ["-overwrite", "ca", "ca"],
            "showLog": true
        },
        {
            "name": "Create ICA",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": ["ica", "-maxPathLength=0", "ca/ica"],
            "showLog": true
        },
        {
            "name": "Create server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": ["-root=play", "-debug", "-overwrite", "server", "-csr=csr/csr.pem", "-san=192.168.1.1", "ca/ica/server"],
            "showLog": true
        },
        {
            "name": "Create CSR",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": ["csr", "-dn=/CN=tossme"],
            "showLog": true
        },
        {
            "name": "export",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": ["export", "-export-ca=vpn_server/vpn_server.pem"],
            "showLog": true
        },
        {
            "name": "describe",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": ["-root=play", "describe", "-password=1234",  "ca/ica/server2/server2-key.pem"],
            "showLog": true
        }
    ]
}